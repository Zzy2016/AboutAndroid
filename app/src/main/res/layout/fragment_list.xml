<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ListFragment">


    <TextView
        android:id="@+id/tvLocalMusic"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="本地音乐"
        android:gravity="center"
        android:textSize="@dimen/textSize20"
        />
    <TextView
        android:id="@+id/tvRecentMusic"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/tvLocalMusic"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="最近播放"
        android:gravity="center"
        android:textSize="@dimen/textSize20"
        />
    <TextView
        android:id="@+id/tvDownloadMusic"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/tvRecentMusic"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="下载管理"
        android:gravity="center"
        android:textSize="@dimen/textSize20"
        />
    <TextView
        android:id="@+id/tvMusicAuther"
        android:layout_width="match_parent"
        android:layout_height="50dp"
       app:layout_constraintTop_toBottomOf="@id/tvDownloadMusic"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="我的歌手"
        android:gravity="center"
        android:textSize="@dimen/textSize20"
        />



</androidx.constraintlayout.widget.ConstraintLayout>