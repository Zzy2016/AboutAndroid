<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    tools:context=".fragment.ControlBarFragment">

<!--    android:background="@drawable/placeholder_disk_210"-->

    <ImageView
        android:id="@+id/img1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/placeholder_disk_210"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="start"

        android:text="这里式歌曲名"
        app:layout_constraintLeft_toRightOf="@id/img1"
        app:layout_constraintTop_toTopOf="@id/img1"
        />

    <TextView
        android:id="@+id/tvSonger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="这里式歌手名"
        app:layout_constraintLeft_toLeftOf="@id/tvName"
        app:layout_constraintBottom_toBottomOf="@id/img1"
        />

    <ImageView
        android:id="@+id/imgNext"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/playbar_btn_next"

        />

    <ImageView
        android:id="@+id/imgPlay"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toLeftOf="@id/imgNext"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/playbar_btn_play"
        />

    <ImageView
        android:id="@+id/imgList"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toLeftOf="@id/imgPlay"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/playerlist"
        />

</androidx.constraintlayout.widget.ConstraintLayout>